# =============================================================================
# Django Starter - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# This single .env file works for both local and Docker development.
# Docker Compose overrides host-specific values (DB_HOST, REDIS_URL) automatically.
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# Production: You MUST set DEBUG=False, a strong unique SECRET_KEY, and ALLOWED_HOSTS.
# The app will not start in production without SECRET_KEY and ALLOWED_HOSTS set.
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
DJANGO_ENV=development

# Allowed Hosts (comma-separated). Production: required; set to your domain(s).
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Local development: Uses SQLite by default (no config needed)
# Docker development: PostgreSQL (hosts overridden by docker-compose.yml)
# Production: Configure PostgreSQL below

DB_ENGINE=django.db.backends.postgresql
DB_NAME=django_starter
DB_USER=django_user
DB_PASSWORD=django_password
DB_HOST=localhost
DB_PORT=5432

# To use SQLite locally instead, uncomment these and comment out PostgreSQL above:
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# -----------------------------------------------------------------------------
# Redis Configuration (optional for local dev, used in Docker/production)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Development: Console backend (prints emails to terminal)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production: Uncomment and configure SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# OAuth Providers (optional - leave empty to disable)
# -----------------------------------------------------------------------------
# Google OAuth2 - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LinkedIn OAuth2 - https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Cloudflare Turnstile CAPTCHA (optional - leave empty to disable)
# -----------------------------------------------------------------------------
# Get keys at https://dash.cloudflare.com/
# Test keys for development:
#   Site Key: 1x00000000000000000000AA
#   Secret Key: 1x0000000000000000000000000000000AA
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# -----------------------------------------------------------------------------
# Other Settings
# -----------------------------------------------------------------------------
TIME_ZONE=America/New_York
